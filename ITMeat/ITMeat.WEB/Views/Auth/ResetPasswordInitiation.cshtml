@{
    Layout = "_WebLayout";
}
@model ITMeat.WEB.Models.Auth.ResetPasswordInitiationViewModel

<div class="ui middle aligned center aligned grid">
    <div class="column webressetbox">
        <h2 class="ui teal header">Reset password</h2>
        <br />
        @using (Html.BeginForm("ResetPasswordInitiation", "Auth", FormMethod.Post))
        {
            <div class="ui large form">
                <div class="field">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
                    <br />
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="field">
                    <button class="orginalbutton big" type="submit" id="btnResetPassword">Reset password</button>
                </div>
            </div>
        }
    </div>
</div>