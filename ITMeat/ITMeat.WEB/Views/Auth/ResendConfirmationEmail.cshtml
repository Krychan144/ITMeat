@{
    Layout = "_WebLayout";
}
@model ITMeat.WEB.Models.Auth.ResendConfirmationEmailViewModel

<div class="ui two column centered grid">
    <div class="column">
        <br />
        <h2 class="ui teal header">Resend confirmation email</h2>
        <br /><br />
        @using (Html.BeginForm("ResendConfirmationEmail", "Auth", FormMethod.Post))
        {
            Html.HiddenFor(x => x.DomainName, ViewBag.DomainName as string);
            <div class="ui large form">
                <div class="field">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-2" })
                    <br />
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="field">
                    <button class="ui button" type="submit" id="btnLogin">Resend</button>
                </div>
            </div>
        }
    </div>
</div>